<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:paddingVertical="5dp"
    android:paddingHorizontal="10dp"
    android:id="@+id/vItemCustomer_shopregeter"
    android:layout_marginHorizontal="5dp"
    android:gravity="center"
    >
    <ImageView
        android:id="@+id/ivItemShopregeter"
        android:src="@drawable/ic_launcher_background"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tvuserNameRegeter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên người đăng ký"
            android:textSize="18dp"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp"
            >
            <TextView
                android:id="@+id/tvuserNumberphoneRegeter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SDT:09876543321"/>
            <TextView
                android:id="@+id/tvuserEmailRegeter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email: demo@gmail.com"/>
            <TextView
                android:id="@+id/tvuserAddressRegeter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dia chi: demo"
                android:lines="3"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>